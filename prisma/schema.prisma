generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // Keep this line if using Supabase
  directUrl = env("DIRECT_URL") // Remove this line if not using Supabase
}

model Gadget {
  id               String    @id @default(uuid())
  name             String
  codename         String    @unique
  status           Status    @default(Available)
  decommissionedAt DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
}

enum Status {
  Available
  Deployed
  Destroyed
  Decommissioned
}
